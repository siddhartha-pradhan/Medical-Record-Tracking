@model PrescriptionDetailViewModel

@{
    ViewData["Title"] = "Prescription Diagnosis";
}

<div class="pt-2 ml-4 pl-3 mb-4">
    <h1>Diagnosis Details</h1>
</div>

<form method="post">
    <div class="container-fluid" style="width: 95%">
        <div class="row" >
            <div class="card" style="width: 95%">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="row mb-2">
                                <img id="profilePicture" style="width:250px;height:300px; object-fit:cover; margin:auto" src="@Model.PatientImage">
                            </div>
                            <div class="row justify-content-center">
                                <p class="text-center h4 text-dark">@Model.PatientName</p>
                            </div>
                        </div>
                        <div class="col">
                            <input asp-for="MedicationTreatments.Id" class="form-control" hidden/>
                            <input asp-for="DoctorId" class="form-control" hidden/>
                            <input asp-for="PatientId" class="form-control" hidden/>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicineName"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicineName" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicineType"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicineType" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="DoctorName"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="DoctorName" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicationTreatments.Dose"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicationTreatments.Dose" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicationTreatments.TimePeriod"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicationTreatments.TimePeriod" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicationTreatments.TimeFormat"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicationTreatments.TimeFormat" class="form-control" disabled/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    <label asp-for="MedicationTreatments.PharmacistRemarks"></label>
                                </div>
                                <div class="col-8 mb-4">
                                    <input asp-for="MedicationTreatments.PharmacistRemarks" required class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                </div>
                                <div class="col-8 mb-4">
                                    <button type="submit" class="btn btn-dark form-control">Finalize Diagnosis</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

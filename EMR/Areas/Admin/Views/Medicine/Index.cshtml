@{
    ViewData["Title"] = "Medicine";
}

<partial name="_Notification" />

<div class="pt-2 ml-4 pl-3">
    <h1>Medicines Index</h1>
</div>

<div class="container-fluid" style="width: 95%">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-dark">List of Medicine</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-dark" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Medicine</a>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
            <tr class="table-info">
                <th class="text-center">Medicine Title</th>
                <th class="text-center">Unit Price</th>
                <th class="text-center">Type</th>
                <th class="text-center">Category</th>
                <th class="text-center">Manufacturer</th>
                <th class="text-center">Options</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/medicine.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
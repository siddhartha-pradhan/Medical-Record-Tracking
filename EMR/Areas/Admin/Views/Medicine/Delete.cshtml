@model Silverline.Core.ViewModels.DeleteMedicineViewModel

@{
    ViewData["Title"] = "Medicine";
}

<div class="pt-2 ml-4 pl-3">
    <h1>Medicines Index</h1>
</div>

<form method="post">
    <div class="container-fluid" style="width: 95%">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h2 class="text-dark">Delete an existing category</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Name" class="form-control" disabled />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="UnitPrice"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="UnitPrice" class="form-control" disabled />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Type" class="form-control" disabled />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Category" class="form-control" disabled />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Manufacturer"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Manufacturer" class="form-control" disabled />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-dark form-control">Delete</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
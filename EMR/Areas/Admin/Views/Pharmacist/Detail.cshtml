@model Silverline.Core.ViewModels.PharmacistViewModel
@{
	ViewData["Title"] = "Pharmacist Details";
}
<div class="pt-2 ml-4 pl-3">
    <h1>Pharmacist Details</h1>
</div>

<div class="container-fluid" style="width:95%">
    <form method="post">
        <div class="row">
            <div class="col-auto">
                @if (Model.ProfileImage != null)
                {
					<img id="profilePicture" style="width:450px;height:500px; object-fit:cover" src="@Model.Image">
                }
            </div>
			<div class="col-6 ml-2 mt-4">
				<input asp-for="PharmacistId" class="form-control" hidden/>
				<input asp-for="UserId" class="form-control" hidden/>
				<div class="form-group row mb-4">
					<div class="col-5 mt-2">
						<label asp-for="Name"></label>
					</div>
					<div class="col-7">
						<input asp-for="Name" class="form-control" disabled/>
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-4">
					<div class="col-5 mt-2">
						<label asp-for="PhoneNumber"></label>
					</div>
					<div class="col-7">
						<input asp-for="PhoneNumber" class="form-control" disabled/>
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-4">
					<div class="col-5 mt-2">
						<label asp-for="Email"></label>
					</div>
					<div class="col-7">
						<input asp-for="Email" class="form-control" disabled/>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-4">
					<div class="col-5 mt-2">
						<label asp-for="CertificationNumber"></label>
					</div>
					<div class="col-7">
						<input asp-for="CertificationNumber" class="form-control" disabled/>
						<span asp-validation-for="CertificationNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<div class="col-5 mt-2">
						<label asp-for="HighestDegree"></label>
					</div>
					<div class="col-7">
						<input asp-for="HighestDegree" class="form-control" disabled/>
						<span asp-validation-for="HighestDegree" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row mb-3">
					<div class="col-5">
						<label hidden></label>
					</div>
					<div class="col-7">
						<div class="row">
							<div class="col-6">
								<a class="btn btn-outline-primary mb-2 w-100" href="@Model.Resume" target="_blank">Resume</a>
							</div>
							<div class="col-6">
								<a class="btn btn-outline-primary mb-2 w-100" href="@Model.Certification" target="_blank">Certification</a>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group row mb-5">
					<div class="col-5">
						<label hidden></label>
					</div>
					<div class="col-7">
						<div class="row">
							<div class="col-12">
								<a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
							</div>
						</div>
					</div>
				</div>
			</div>
        </div>
    </form>
</div>
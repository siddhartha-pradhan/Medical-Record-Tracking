@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-7">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-8">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.OldPassword" class="form-label"></label>
                        <input asp-for="Input.OldPassword" id="codewords" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <input type="checkbox" class="mt-5 mr-1" id="password" onclick="showpasswordinitial(this);" />
                        Show Password
                    <script type="text/javascript">
                    function showpasswordinitial(check_box) {
                        var spass = document.getElementById("codewords");
                        if (check_box.checked){
                            spass.setAttribute("type", "text");
                            console.log("On");
                        }
                        else{
                            console.log("Off");
                            spass.setAttribute("type", "password");
                        }
                    }
                    </script>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <input asp-for="Input.NewPassword" id="passwords" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <input type="checkbox" class="mt-5 mr-1" id="password" onclick="showpasswordinitialing(this);" />
                        Show Password
                    <script type="text/javascript">
                    function showpasswordinitialing(check_box) {
                        var pass = document.getElementById("passwords");
                        if (check_box.checked)
                            pass.setAttribute("type", "text");
                        else
                            pass.setAttribute("type", "password");
                    }
                    </script>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-floating mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" id="passcodes" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <input type="checkbox" class="mt-5 mr-1" id="password" onclick="showpasswordinitials(this);" />
                        Show Password
                    <script type="text/javascript">
                    function showpasswordinitials(check_box) {
                        var scode = document.getElementById("passcodes");
                        if (check_box.checked)
                            scode.setAttribute("type", "text");
                        else
                            scode.setAttribute("type", "password");
                    }
                    </script>
                </div>
            </div>
            <button type="submit" class="w-50 btn btn-dark">Update password</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Component.InvokeAsync("Notyf") 
    <partial name="_ValidationScriptsPartial" />
}

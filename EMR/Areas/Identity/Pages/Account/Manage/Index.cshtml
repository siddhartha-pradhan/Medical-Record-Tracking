@page
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>

<link rel="stylesheet" href="~/css/adminlte.min.css" asp-append-version="true" />

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
	<form id="profile-form" method="post" enctype = "multipart/form-data">
		<div class="col-md-6">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-3">
				<label asp-for="Input.ProfileImage" class="mb-2" style="width: 100%;"></label>
				@if (Model.Input.ProfileImage != null)
				{
					<img id="profilePicture" style="width:485px;height:400px; object-fit:cover" src="@Model.Input.ProfileImage">
				}
				else
				{
					<img id="profilePicture" style="width:500px;height:350px; object-fit:cover">
				}
				<label class="form-label mt-3">Upload a new picture</label>
				<input asp-for="Input.ProfileImage" name="UserImage" type="file" id="exampleInputFile" accept=".png,.jpg,.jpeg,.gif,.tif" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
				<span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
			</div>
			<div class="form-floating mb-3">
				<label asp-for="Username" class="form-label"></label>
				<input asp-for="Username" class="form-control" disabled />
			</div>
			<div class="form-floating mb-3">
				<label asp-for="Input.PhoneNumber" class="form-label"></label>
				<input asp-for="Input.PhoneNumber" class="form-control" />
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>
			<button id="update-profile-button" type="submit" class="w-100 btn btn-dark mt-3 mb-5">Save</button>
		</div>
	</form>

</div>
<script src="~/js/bs-custom-file-input.min.js"></script>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

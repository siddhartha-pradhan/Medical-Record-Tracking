@{
    ViewData["Title"] = "Diagnostic Tests";
}

@model IEnumerable<Silverline.Core.Entities.DiagnosticTest>

<partial name="_Notification" />

<div class="pt-2 ml-4 pl-3">
    <h1>Diagnostic Tests Index</h1>
</div>

<div class="container-fluid" style="width: 95%">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-dark">List of Diagnostic Tests</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-dark" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Diagnostic Test</a>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Test Title</th>
                    <th class="text-center">Initial Range</th>
                    <th class="text-center">Final Range</th>
                    <th class="text-center">Unit</th>
                    <th class="text-center">Unit Price</th>
                    <th class="text-center">Test Type</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.InitialRange</td>
                        <td>@item.FinalRange</td>
                        <td>@item.Unit</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.TestType?.Name</td>
                        <td>
                            <a href="@Url.Action("Upsert", "Test", new { id=item.Id })" class="btn btn-dark btn-sm"><i class="fa fa-cogs"></i></a>
                            <a href="@Url.Action("Delete", "Test", new { id=item.Id })" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
   <script>
        $("#tableData").DataTable();
   </script>
}


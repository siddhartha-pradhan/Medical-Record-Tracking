@model Silverline.Core.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Diagnostic Tests";
}


<div class="pt-2 ml-4 pl-3 mb-4">
    <h1>List of Available Diagnostic Tests</h1>
</div>

<partial name="_Notification" />

<div class="container-fluid" style="width: 95%">
    <div class="row pb-3">
        @foreach (var item in Model.TestTypes)
        {
            <div class="col-md-4">
                <div class="row p-2">
                    <div class="col-12 p-1 bg-white" style="border: 1px solid black; border-radius: 5px;">
                        <div class="row justify-content-center m-3">
                            <div class="col ml-4">
                                <div class="row">
                                    <h5>
                                        <label asp-for="@item.Title" class="mr-4"></label>
                                    </h5>
                                </div>
                                <div class="row">
                                    <h5>
                                        <label asp-for="@item.InitialRange" class="mr-4"></label>
                                    </h5>
                                </div>
                                <div class="row">
                                    <h5>
                                        <label asp-for="@item.FinalRange" class="mr-4"></label>
                                    </h5>
                                </div>
                                <div class="row">
                                    <h5>
                                        <label asp-for="@item.UnitPrice" class="mr-4"></label>
                                    </h5>
                                </div>
                                <div class="row">
                                    <h5>
                                        <label asp-for="@item.TestType" class="mr-4"></label>
                                    </h5>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row">
                                    <small class="h6 text-dark mt-1 mb-3">@item.Title</small>
                                </div>
                                <div class="row">
                                    <p class="h6 text-dark mt-1 mb-3">@item.InitialRange @item.Unit</p>
                                </div>
                                <div class="row">
                                    <p class="h6 text-dark mt-1 mb-3">@item.FinalRange @item.Unit</p>
                                </div>
                                <div class="row">
                                    <p class="h6 text-dark mt-1 mb-3">@item.UnitPrice Credits</p>
                                </div>
                                <div class="row">
                                    <p class="h6 text-dark mt-1 mb-3">@item.TestType</p>
                                </div>
                            </div>
                        </div>
                        
                        <div>
                            <a asp-action="AddToCart" class="btn bg-dark text-light form-control" asp-route-testId="@item.Id">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
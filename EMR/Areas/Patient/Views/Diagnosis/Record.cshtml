@using Silverline.Core.Constants;
@model List<DiagnosticTestCartViewModel>

@{
	ViewData["Title"] = "Record of Laboratory Diagnosis";
}

<div class="pt-2 ml-4 pl-3 mb-4">
	<h1>Requested Diagnosis History</h1>
</div>

<div class="container-fluid" style="width: 95%">
	<div class="row">
		<div class="col-md-12">
			@foreach (var item in Model)
			{
				<div class="card">
					<div class="card-body">
						<div class="row">
							<div class="col">
								<div class="row">
									<div class="col-4">
										<h3 class="row ml-3">
											Test Name
										</h3>
										<div class="row mb-4 ml-3">
											@item.TestName
										</div>
									</div>
									<div class="col-4">
										<h3 class="row ml-3">
											Range
										</h3>
										<div class="row mb-4 ml-3">
											@item.Range
										</div>
									</div>
									<div class="col-4">
										<h3 class="row ml-3">
											Technician Remarks
										</h3>
										<div class="row mb-4 ml-3">
											@item.TechnicianRemarks
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-4">
										<h3 class="row ml-3">
											Test Result
										</h3>
										<div class="row mb-4 ml-3">
											@item.Value
										</div>
									</div>
									<div class="col-4">
										<h3 class="row ml-3">
											Booked Test 
										</h3>
										<div class="row mb-4 ml-3">
											@item.BookedDate
										</div>
									</div>
									<div class="col-4">
										<h3 class="row ml-3">
											Finalized Date
										</h3>
										<div class="row mb-4 ml-3">
											@item.FinalizedTest
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>			
	</div>			
</div>
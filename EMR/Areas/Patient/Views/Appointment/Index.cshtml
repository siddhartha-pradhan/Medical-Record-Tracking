@model List<EMR.Core.ViewModels.DoctorViewModel>

@{
    ViewData["Title"] = "Doctors Index";
}

<div class="pt-2 ml-4 pl-3">
    <h1>Doctors Index</h1>
</div>

<partial name="_Notification" />

<div class="container-fluid" style="width: 95%">
    <div class="row pb-3">
        @foreach (var @item in Model)
        { 
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border: 1px solid black; border-radius: 5px;">
                        <div class="container-item">
                            <img id="profilePicture" style="width:275px;height:400px; object-fit:cover" src="@item.ProfileImage">
                        </div>
                        <div class="col">
                            <div class="row pl-2 pt-2">
                                <p class="card-title h4 text-dark">@item.Name</p>
                            </div>
                            <div class="row p-lg-2">
                                <b>@item.Specialty</b>
                            </div>
                            <div class="row p-lg-2">
                                <i>@item.HighestMedicalDegree</i>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Book" class="btn btn-dark form-control" asp-route-id="@item.DoctorId">
                                Book Appointment
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



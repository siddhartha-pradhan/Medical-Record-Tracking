@model List<Silverline.Core.ViewModels.MedicalRecordViewModel>

@{
    ViewData["Title"] = "Medical Records";
}


<div class="container-fluid" style="width:95%">
    <div class="row pt-4 mb-4">
        <div class="col-4">
            <h2 class="text-dark">Medical Records</h2>
        </div>
        <div class="col-8 text-right">
            <a class="btn btn-dark" asp-controller="MedicalRecord" asp-action="Index"><i class="fa-solid fa-plus"></i> &nbsp; Import Medical Records</a>
        </div>
    </div>
    @foreach(var result in Model)
    {
        <div class="row pb-4" >
            <div class="card ml-2" style="width:99%">
                <div class="card-header">
                    <h3 class="row mt-2 pl-3 ml-4">
                        @result.Specialty
                    </h3>
                </div>
                <div class="container" style="width: 95%">
                    @foreach (var item in result.MedicalRecords)
                    {
                        <div class="card-header mt-4">
                            <div class="row">
                                <div class="col-3">
                                    <h3 class="row ml-2">
                                        @item.DateOfAppointment
                                    </h3>
                                    <div class="row mb-4 ml-2">
                                        @item.DoctorName
                                    </div>
                                    <div class="vr"></div>
                                </div>
                                <div class="col">
                                    <h3 class="row ml-2">
                                        Title
                                    </h3>
                                    <div class="row mb-4 ml-2">
                                        @item.Title
                                    </div>
                                    <h3 class="row ml-2">
                                        Description
                                    </h3>
                                    <div class="row mb-4 ml-2">
                                    @Html.Raw(@item.Description)
                                    </div>
                                </div>
                                <div class="col">
                                    <h3 class="row ml-2">
                                        Prescriptions
                                    </h3>
                                    <div class="row mb-4 ml-2">
                                    @item.Medicines
                                    </div>
                                        <h3 class="row ml-2">
                                        Diagnostics
                                    </h3>
                                    <div class="row mb-4 ml-2">
                                    @item.LaboratoryTests
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
</div>

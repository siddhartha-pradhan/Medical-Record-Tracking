@page
@model LoginModel

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Sign In</title>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<link rel="stylesheet" href="~/css/all.min.css">
	<link rel="stylesheet" href="~/css/icheck-bootstrap.min.css">
	<link rel="stylesheet" href="~/css/adminlte.min.css">
	<link rel="stylesheet" href="~/css/daterangepicker.css">
	<link rel="stylesheet" href="~/css//tempusdominus-bootstrap-4.min.css">
	<link rel="shortcut icon" href="~/favicon.png" />
</head>

<body class="hold-transition register-page">
	<div class="register-box w-25">
		<div class="card card-outline card-primary">
			<div class="card-header text-center">
				<a href="#" class="h1"><b>Silver</b>line</a>
			</div>
			<div class="card-body">
				<p class="login-box-msg">Log in to start your session</p>
				<form action="" method="post">
					<div class="input-group mb-3">
						<input asp-for="Input.Email" type="email" class="form-control" placeholder="username@domain.com">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-envelope"></span>
							</div>
						</div>
					</div>
					<div class="input-group mb-3">
						<input asp-for="Input.Password" id="passcode" class="form-control" placeholder="********">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-8 ml-2">
							<input type="checkbox" class="mr-1" id="password" onclick="showpasswordinitial(this);" />
								Show Password
							<script type="text/javascript">
							function showpasswordinitial(check_box) {
								var spass = document.getElementById("passcode");
								if (check_box.checked)
									spass.setAttribute("type", "text");
								else
									spass.setAttribute("type", "password");
							}
							</script>
						</div>
					</div>
					<div class="row">
						<div class="col-8">
							<div class="icheck-primary">
								<label asp-for="Input.RememberMe" class="form-label">
									<input class="form-check-input" asp-for="Input.RememberMe" />
									@Html.DisplayNameFor(m => m.Input.RememberMe)
								</label>
							</div>
						</div>
						<div class="col-4">
							<button id="login-submit" type="submit" class="btn btn-dark btn-block">Sign In</button>
						</div>
					</div>
				</form>
				<p class="mb-1 mt-4">
					<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>
				<p class="mb-1">
					<a asp-page="./SignIn" asp-route-returnUrl="@Model.ReturnUrl">Register as a patient</a>
				</p>
				<p class="mb-1">
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Request your registrations</a>
				</p>
				<p class="mb-0">
					<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
				</p>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/adminlte.min.js"></script>
	<script src="~/js/bs-custom-file-input.min.js"></script>
	<script src="~/js/inputmask.min.js"></script>
	<script src="~/js/jquery.inputmask.min.js"></script>
	<script src="https://kit.fontawesome.com/1c1a57d0d0.js"></script>
	@await Component.InvokeAsync("Notyf") 
	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
</body>
</html>
@model IEnumerable<Silverline.Core.ViewModels.PatientViewModel>

<partial name="_Notification" />

<div class="pt-2 ml-4 pl-3">
	<h1>Patients Index</h1>
</div>

<div class="container-fluid" style="width: 95%">
	<div class="row mb-3">
		<div class="col-6">
			<h2 class="text-primary">List of Patients</h2>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-dark" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Add a new Patient</a>
		</div>
	</div>

	<div class="p-2 border rounded">
		<table id="tableData" class="table table-striped table-bordered" style="width:100%">
			<thead class="mt-2">
				<tr class="table-info">
					<th class="text-center">Patient Name</th>
					<th class="text-center">Phone Number</th>
					<th class="text-center">Email Address</th>
					<th class="text-center">State Address</th>
					<th class="text-center">Date of Birth</th>
					<th class="text-center">Credit Points</th>
					<th class="text-center">Options</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.PhoneNumber</td>
						<td>@item.Email</td>
						<td>@item.Address</td>
						<td>@item.DateOfBirth</td>
						<td>@item.CreditPoints</td>
						<td>
							<a href="@Url.Action("Detail", "Patient", new { id = @item.UserId })" class="btn btn-dark btn-sm"><i class="fas fa-user-check"></i></a>
							@if (item.IsLocked)
							{
								<input type="button" value="Unlock" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("Unlock", "Patient", new { id = @item.UserId })'"/>
							}
							else {
								<input type="button" value="Lock" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("Lock", "Patient", new { id = @item.UserId })'"/>
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts{
		<script>
			$("#tableData").DataTable();
		</script>
}

@model Silverline.Core.Entities.Manufacturer

@{
    ViewData["Title"] = "Category";
}

<h1 class="mb-4">Category Index</h1>

<form method="post">
    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <h2 class="text-primary">Delete an existing category</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <input asp-for="Id" class="form-control" type="hidden" />
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Location"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="Location" class="form-control" disabled />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="IsActive"></label>
                </div>
                <div class="col-8 mb-4">
                    <input asp-for="IsActive" class="form-control" disabled />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
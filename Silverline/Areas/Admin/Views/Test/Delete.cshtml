@model Silverline.Core.Entities.DiagnosticTest

@{
    ViewData["Title"] = "Delete";
}

<div class="pt-2 ml-4 pl-3">
    <h1>Diagnostic Tests Index</h1>
</div>

<div class="container-fluid" style="width:95%">
    <form method="post">
        <div class="container-fluid" style="width: 95%">
            <div class="row mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-6">
                    <h2 class="text-primary">Delete an existing test</h2>
                </div>
                <div class="col-8 pt-4">
                    <div class="form-group row">
                        <input asp-for="Id" class="form-control" type="hidden" />
                        <div class="col-4">
                            <label asp-for="Title"></label>
                        </div>
                        <div class="col-8 mb-4">
                            <input asp-for="Title" class="form-control" disabled />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="InitialRange"></label>
                        </div>
                        <div class="col-8 mb-4">
                            <input asp-for="InitialRange" class="form-control" disabled />
                            <span asp-validation-for="InitialRange" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="FinalRange"></label>
                        </div>
                        <div class="col-8 mb-4">
                            <input asp-for="FinalRange" class="form-control" disabled />
                            <span asp-validation-for="FinalRange" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4">
                            <div class="row">
                                <div class="col">
                                    <button type="submit" class="btn btn-dark form-control">Delete</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
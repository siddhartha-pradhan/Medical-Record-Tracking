@{
    ViewData["Title"] = "Test Type";
}

<partial name="_Notification" />

<div class="pt-2 ml-4 pl-3">
    <h1>Test Type Index</h1>
</div>

<div class="container-fluid" style="width:95%">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Test Types</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Type</a>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Test Type Title</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/testtype.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

